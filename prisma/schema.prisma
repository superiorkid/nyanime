generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String?  @unique
  email     String?  @unique
  password  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  watchings Watching[]
}

model Anime {
  id          String @id @default(cuid())
  malId       String @unique
  title       String
  images      String
  releaseYear String
  genre       String
  rating      String

  watchings Watching[]

  @@index([title, rating])
}

model Watching {
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  anime      Anime    @relation(fields: [animeId], references: [id])
  animeId    String
  assignedAt DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@id([userId, animeId])
}
